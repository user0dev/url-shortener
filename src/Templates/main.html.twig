<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>{% block title %}Url shortener{% endblock %}</title>
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>


{% block content %}
	<form id="inputForm" class="main-block" action="" method="post" onsubmit="getShortUrl(); return false">
		<div class="inputs">
			<span class="border-input long-url">
                <input class="element" type="text" name="long-url" id="longUrl" value="{{ longUrl }}" required
                        {% block inpuUrl %}
                        {% endblock %}
                >
            </span>
            {% block submitBT %}
            {% endblock %}
		</div>

		<div id="shortUrlBlock">
			<input type="text" id="shortUrl" readonly value="{{ shortUrl }}">
		</div>

	</form>


{% endblock %}
{% block scripts %}
	<script src="/js/ajax.js"></script>
{% endblock %}

</body>
</html>